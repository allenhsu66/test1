<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:text="Manual Input Shipline"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold" />

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="15dp"
	    android:gravity="center_vertical" >

		<TextView
		    android:layout_width="150dp"
		    android:layout_height="wrap_content"
		    android:text="Booking Date: " />

		<EditText
		    android:id="@+id/etBookingDate"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:lines="1"
		    android:singleLine="true"
		    android:ems="10" >

		</EditText>

	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="15dp"
	    android:gravity="center_vertical" >

		<TextView
		    android:layout_width="150dp"
		    android:layout_height="wrap_content"
		    android:text="PO: " />

		<EditText
		    android:id="@+id/etPo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:lines="1"
		    android:singleLine="true"
		    android:ems="10" >

		</EditText>

	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="15dp"
	    android:gravity="center_vertical" >

		<TextView
		    android:layout_width="150dp"
		    android:layout_height="wrap_content"
		    android:text="Style: " />

		<EditText
		    android:id="@+id/etStyle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:lines="1"
		    android:singleLine="true"
		    android:ems="10" >

		</EditText>

	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="15dp"
	    android:gravity="center_vertical" >

		<TextView
		    android:layout_width="150dp"
		    android:layout_height="wrap_content"
		    android:text="Ship ID: " />

		<EditText
		    android:id="@+id/etShipId"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:lines="1"
		    android:singleLine="true"
		    android:ems="10" >

		</EditText>

	</LinearLayout>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="15dp"
	    android:gravity="center_vertical" >

		<TextView
		    android:layout_width="150dp"
		    android:layout_height="wrap_content"
		    android:text="Quantity: " />

		<EditText
		    android:id="@+id/etQuantity"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:ems="10"
		    android:inputType="number"
		    android:lines="1"
		    android:singleLine="true" >

		</EditText>

	</LinearLayout>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="15dp"
	    android:gravity="center_vertical" >

		<TextView
		    android:layout_width="150dp"
		    android:layout_height="wrap_content"
		    android:text="Mode: " />

		<EditText
		    android:id="@+id/etMode"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:lines="1"
		    android:singleLine="true"
		    android:ems="10" >

		</EditText>

	</LinearLayout>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="15dp"
	    android:gravity="center_vertical" >

		<TextView
		    android:layout_width="150dp"
		    android:layout_height="wrap_content"
		    android:text="Shipping Date: " />

		<EditText
		    android:id="@+id/etShippingDate"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:lines="1"
		    android:singleLine="true"
		    android:ems="10" >

		</EditText>

	</LinearLayout>
</LinearLayout>
