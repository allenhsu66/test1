<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="132"
        android:background="#e7e8e9"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#bf1e2d"
            android:drawableLeft="@drawable/logout_btn"
            android:gravity="left|center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:text="Logout"
            android:textColor="#fff"
            android:textSize="22dp"
            android:textStyle="bold" />

        <CheckedTextView
            android:id="@+id/btnCheckUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_black_grey_bg"
            android:drawableLeft="@drawable/selector_check_update_drawable_left"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp"
            android:text="Check\nUpdate"
            android:textColor="@color/selector_tab_text_color"
            android:textSize="22dp"
            android:textStyle="bold" />

        <CheckedTextView
            android:id="@+id/btnBookingSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_black_grey_bg"
            android:drawableLeft="@drawable/selector_schedule_drawable_left"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp"
            android:text="Booking\nSchedule"
            android:textColor="@color/selector_tab_text_color"
            android:textSize="22dp"
            android:textStyle="bold" />

        <CheckedTextView
            android:id="@+id/btnInspectionReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_black_grey_bg"
            android:drawableLeft="@drawable/selector_report_drawable_left"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp"
            android:text="Inspection\nReports"
            android:textColor="@color/selector_tab_text_color"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/app_kgslogo" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameDetail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="892" >

        <!-- <include layout="@layout/f_inspection_reports"/> -->
    </FrameLayout>

</LinearLayout>