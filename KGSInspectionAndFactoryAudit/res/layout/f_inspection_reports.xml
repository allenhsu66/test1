<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckedTextView
            android:id="@+id/btnReportStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="157"
            android:gravity="center"
            android:background="@drawable/selector_green_grey_bg"
            android:padding="10dp"
            android:text="Report Status"
            android:textColor="#fff"
            android:textSize="20dp" />

        <CheckedTextView
            android:id="@+id/btnSelectFromBooking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="247"
            android:gravity="center"
            android:background="@drawable/selector_green_grey_bg"
            android:padding="10dp"
            android:text="Select from Booking"
            android:textColor="#fff"
            android:textSize="20dp" />

        <CheckedTextView
            android:id="@+id/btnNewReport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="148"
            android:gravity="center"
            android:background="@drawable/selector_green_grey_bg"
            android:padding="10dp"
            android:text="New Report"
            android:textColor="#fff"
            android:textSize="20dp" />

        <CheckedTextView
            android:id="@+id/btnSearchOldReports"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="248"
            android:gravity="center"
            android:background="@drawable/selector_green_grey_bg"
            android:padding="10dp"
            android:text="Search Old Reports"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />

</LinearLayout>